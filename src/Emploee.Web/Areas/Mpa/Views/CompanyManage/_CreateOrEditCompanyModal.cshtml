
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using Emploee.Web.Areas.Mpa.Models.Common.Modals
@using Emploee.Web.Areas.Mpa.Models.CompanyManage

@model CreateOrEditCompanyModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditCompany") + ": " + Model.Company.CompanyName) : L("CreateCompany")))


<!--html代码区域-->
<div class="modal-body">
    <form name="companyInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.Company.Id" />
 <div class="row>
            <!--<div class="alert alert-info fs16 bold mt10">分节标题</div>-->
            
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Id")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Id" name="Id" value="@Model.Company.Id" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyName")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler  required" type="text" id="CompanyName" name="CompanyName" maxlength="200" value="@Model.Company.CompanyName" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyEmail")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="CompanyEmail" name="CompanyEmail" maxlength="200" value="@Model.Company.CompanyEmail" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyPhone")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="CompanyPhone" name="CompanyPhone" maxlength="15" value="@Model.Company.CompanyPhone" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyAddress")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="CompanyAddress" name="CompanyAddress" maxlength="200" value="@Model.Company.CompanyAddress" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyScale")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="CompanyScale" name="CompanyScale" maxlength="200" value="@Model.Company.CompanyScale" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyIntroduce")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="CompanyIntroduce" name="CompanyIntroduce" maxlength="200" value="@Model.Company.CompanyIntroduce" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
    
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("Classify")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="Classify" name="Classify">@Model.Company.Classify</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Finanicing")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Finanicing" name="Finanicing" maxlength="200" value="@Model.Company.Finanicing" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("BussinessLicense")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="BussinessLicense" name="BussinessLicense" value="@Model.Company.BussinessLicense" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("RegisterDate")</label>
                        <div class="col-sm-8">
                            <input class="form-control date-picker inline w300 date-picker" type="text" id="RegisterDate" name="RegisterDate" value="@Model.Company.RegisterDate.ToShortString()" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("isDelete")</label>
                        <div class="col-sm-8">
                            <label style="line-height:25px;"><input class="ace" type="checkbox" id="isDelete" name="isDelete"  value="true" @(Model.Company.isDelete ? "checked" : "") /><span class="lbl">是</span></label>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
