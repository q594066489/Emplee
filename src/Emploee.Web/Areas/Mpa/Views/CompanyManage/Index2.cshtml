

@using Abp.Web.Mvc.Extensions
@using Emploee.Emploees.Companies.Authorization
@{
    ViewBag.CurrentPageName = CompanyAppPermissions.Company;
    ViewBag.Title = L("Company");

}

@section Styles{
    <link href="~/libs/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet"/>     	  	      
    @*<link href="~/libs/ueditor1_4_3_3_utf8/third-party/webuploader/webuploader.css" rel="stylesheet"/>
    <link href="~/libs/ueditor1_4_3_3_utf8/third-party/webuploader/Css/multiImg.css" rel="stylesheet"/>
    <link href="~/libs/ueditor1_4_3_3_utf8/third-party/webuploader/Css/singleImg.css" rel="stylesheet"/>*@	        
}


@* 注入所需JS *@
@section Scripts
{ 
    @*<script src="~/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>*@

        <script src="~/libs/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
        <script src="~/libs/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

  @*<script src="~/libs/ueditor1_4_3_3_utf8/third-party/webuploader/webuploader.js"></script> 
    <script src="~/libs/ueditor1_4_3_3_utf8/third-party/webuploader/Scripts/ltmuploader.js"></script>*@    
    @Html.IncludeScript("~/Areas/Mpa/Views/CompanyManage/_CreateOrEditCompanyModal.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/CompanyManage/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Company")</span> <small>@L("CompanyHeaderInfo")</small>
                </h1>
            </div>
        
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button  id="ButtonReload" class="btn btn-primary blue"><i class="fa  fa-refresh"></i> @L("Refresh")</button>


        @if (IsGranted(CompanyAppPermissions.Company_CreateCompany))
        {
            <button id="CreateNewCompanyButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateCompany")</button>
        }
    </div>
</div>

<div class="portlet light">
    @* 通用搜索功能 *@
    <div class="portlet-title portlet-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="CompanysTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" value="@Model.FilterText">
                        <span class="input-group-btn">
                            <button id="GetCompanysButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="portlet-body">
        @*<table id="CompanysTable"></table>*@
        <div id="JobPostsTable"></div>
    </div> 
     
</div>
 









 