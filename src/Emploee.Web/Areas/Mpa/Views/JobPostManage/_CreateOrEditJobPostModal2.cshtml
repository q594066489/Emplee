
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using Emploee.Web.Areas.Mpa.Models.Common.Modals
@using Emploee.Web.Areas.Mpa.Models.JobPostManage

@model CreateOrEditJobPostModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditJobPost") + ": " + Model.JobPost.CompanyId) : L("CreateJobPost")))


<!--html代码区域-->
<div class="modal-body">
    <form name="jobPostInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.JobPost.Id" />
 <div class="row">
            <!--<div class="alert alert-info fs16 bold mt10">分节标题</div>-->
            
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Id")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Id" name="Id" value="@Model.JobPost.Id" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("CompanyId")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler  required" type="text" id="CompanyId" name="CompanyId" value="@Model.JobPost.CompanyId" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("JobName")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler  required" type="text" id="JobName" name="JobName" maxlength="200" value="@Model.JobPost.JobName" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("SalaryMin")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="SalaryMin" name="SalaryMin" value="@Model.JobPost.SalaryMin" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("SalaryMax")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="SalaryMax" name="SalaryMax" value="@Model.JobPost.SalaryMax" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Education")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Education" name="Education" maxlength="200" value="@Model.JobPost.Education" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Experience")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Experience" name="Experience" maxlength="200" value="@Model.JobPost.Experience" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("JobAddress")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="JobAddress" name="JobAddress" maxlength="400" value="@Model.JobPost.JobAddress" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
    
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("SkillRequire")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="SkillRequire" name="SkillRequire">@Model.JobPost.SkillRequire</textarea>
                        </div>
                    </div>
                </div>
    
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("JobDetail")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="JobDetail" name="JobDetail">@Model.JobPost.JobDetail</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("JobSelect")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="JobSelect" name="JobSelect" maxlength="200" value="@Model.JobPost.JobSelect" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("JobType")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="JobType" name="JobType" maxlength="200" value="@Model.JobPost.JobType" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("PublishDate")</label>
                        <div class="col-sm-8">
                            <input class="form-control date-picker inline w300 date-picker" type="text" id="PublishDate" name="PublishDate" value="@Model.JobPost.PublishDate.ToShortString()" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("isDelete")</label>
                        <div class="col-sm-8">
                            <label style="line-height:25px;"><input class="ace" type="checkbox" id="isDelete" name="isDelete"  value="true" @(Model.JobPost.isDelete ? "checked" : "") /><span class="lbl">是</span></label>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
