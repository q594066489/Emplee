<div class="portlet-body table-responsive">
    <div id="toolbar">
        <form class="form-inline">
            <div class="form-group">
                <label class="sr-only" for="product_line">付款情况</label>
                <div class="input-group">
                    <div class="input-group-addon">付款情况</div>
                    <select class="form-control" name="isPay" id="isPay">
                        <option value="">全部</option>
                        <option value="false">未付款</option>
                        <option value="true">已付款</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="sr-only" for="msg_type">审批状态</label>
                <div class="input-group">
                    <div class="input-group-addon">审批状态</div>
                    <select class="form-control" name="isShow" id="isShow">
                        <option value="">全部</option>
                        <option value="false">未付款</option>
                        <option value="true">已付款</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="sr-only" for="msg_type">企业名称</label>
                <div class="input-group">
                    <div class="input-group-addon">企业名称</div>
                    <input type="text" class="form-control" name="searchTexts" id="searchText" placeholder="请输入企业名称或关键字...">
                </div>
            </div>
            <div class="form-group  ">
                <button type="button" class="btn btn-primary queryButton">查询</button>
                <button type="button" class="btn btn-primary  " id="allpass"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>批量通过审批</button>
                <button type="button" class="btn btn-primary  " id="allfail"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>批量取消审批</button>
            </div>
        </form>
    </div>
     
    <table id="ApprovalsTable"></table>
</div>
