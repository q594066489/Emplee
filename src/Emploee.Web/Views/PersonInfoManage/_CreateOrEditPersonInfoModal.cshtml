
@using Abp.Extensions
@using Abp.Application.Services.Dto
@using Emploee.Web.Areas.Mpa.Models.Common.Modals
@using Emploee.Web.Areas.Mpa.Models.PersonInfoManage

@model CreateOrEditPersonInfoModalViewModel

@* 初始化头部 *@
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditPersonInfo") + ": " + Model.PersonInfo.Name) : L("CreatePersonInfo")))


<!--html代码区域-->
<div class="modal-body">
    <form name="personInfoInformationsForm"   role="form" novalidate class="form-validation">
 <input type="hidden" name="Id" value="@Model.PersonInfo.Id" />
 <div class="row">
            <!--<div class="alert alert-info fs16 bold mt10">分节标题</div>-->
            
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Id")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Id" name="Id" value="@Model.PersonInfo.Id" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Name")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler  required" type="text" id="Name" name="Name" maxlength="200" value="@Model.PersonInfo.Name" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Age")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Age" name="Age" value="@Model.PersonInfo.Age" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
    
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("Sex")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="Sex" name="Sex">@Model.PersonInfo.Sex</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Education")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Education" name="Education" maxlength="200" value="@Model.PersonInfo.Education" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Phone")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler  required" type="text" id="Phone" name="Phone" maxlength="15" value="@Model.PersonInfo.Phone" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("Email")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="Email" name="Email" maxlength="50" value="@Model.PersonInfo.Email" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("ExpectPosition")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="ExpectPosition" name="ExpectPosition" maxlength="200" value="@Model.PersonInfo.ExpectPosition" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("ExpectTrade")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="ExpectTrade" name="ExpectTrade" maxlength="200" value="@Model.PersonInfo.ExpectTrade" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
                
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("Resume")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="Resume" name="Resume">@Model.PersonInfo.Resume</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("isOnJob")</label>
                        <div class="col-sm-8">
                            <label style="line-height:25px;"><input class="ace" type="checkbox" id="isOnJob" name="isOnJob"  value="true" @(Model.PersonInfo.isOnJob ? "checked" : "") /><span class="lbl">是</span></label>
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
    
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 colspan-xs-3 control-label">@L("State")</label>
                        <div class="col-sm-8 colspan-xs-8 clearfix">
                   
         <textarea class="form-control input-xxlarge" rows="4" id="State" name="State">@Model.PersonInfo.State</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@L("JobYear")</label>
                        <div class="col-sm-8">
                            <input class="form-control inline w300  maxlength-handler " type="text" id="JobYear" name="JobYear" value="@Model.PersonInfo.JobYear" />
                            <span class="help-inline"></span>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>
@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
 
